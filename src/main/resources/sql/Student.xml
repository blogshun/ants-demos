<mapper namespace="Student">

    <!--数据和实体的对应映射-->
    <sql id="Base_Column_List">
        id, name, logo
    </sql>

    <sql id="testInclude">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_info
    </sql>

    <sql id="testIf">
        SELECT
        <include refid="Base_Column_List"/>
        FROM dgsx_student s
        <if test="year!=null and year!=''">
            s.fk_year = #{year}
        </if>
        <if test="dept!=null and dept!=''">
            s.fk_dept = #{dept}
        </if>
    </sql>

    <!-- //TODO selectCount 多条件数据统计-->
    <sql id="testWhere">
        select count(0) as count from dgsx_student
        <where>
            <if test="code!=null">
                code = #{code}
            </if>
            <if test="id!=null and id!=''">
                and id &lt;&gt; #{id}
            </if>
        </where>
    </sql>

    <!-- 根据主键ID查询一条记录-->
    <sql id="selectById">
        select
        <include refid="Base_Column_List"/>
        from dgsx_student s where s.id = #{id}
    </sql>

